/*
 * 
 * @name Voice
 * 
 * @desc Voice Recognition functionality
 * 
 * @category	HMI
 * @version	1.0
 *
 * @author	Sergey Solovey
 *
 */
{
    "envelope": 	"JSON-RPC 2.0",
    "serviceUrl": 	"/localhost:6087",
    
    "methods": {
	/*
	 * @descr 
	 *      method should be invoked at system startup
	 *	provides information about voice recognition capabilities
	 * 	
	 * @returns
	 * 		VR capabilites
	 */ 
        "Voice.getCapabilities": {
	    	returns: // return value is provided in corresponding response object, id of request and response should be equal
			{
				"capabilities"	: "VrCapabilities" // data type from AppLink protocol specification
			}
        },

	/*
	 * @descr 
	 *      add new command to VR
	 * 	
	 * @returns
	 * 	result code
	 */ 
        "Voice.addCommand": {
		"parameters": {
			"cmdId" 	: "integer",        	// cmdID from addCommand request in AppLink protocol
			[
				"vrCommand" : "String" // vrCommand from Choice data type in AppLink protocol
			]
		}
	    	returns: // return value is provided in corresponding response object, id of request and response should be equal
			{
				// result code
			}
        },
	

	/*
	 * @descr Notifies AppLink core about command trigerred by VR
	 */
	"Buttons.onCommand": {
		"parameters": {
			"commandId" : "Integer" // id of triggered command
		}
	}


    }, //methods end
    
    "id": "integer" //REQUIRED for request methods. NOT to be used for notifications
}
