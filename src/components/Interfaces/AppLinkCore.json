/*                                           
 * 
 * @name AppLink Core 
 * 
 * @desc AppLink Core functionality
 * 
 * @category	HMI
 * @version	1.0
 *
 * @author	Sergey Solovey
 *
 */
{
    "envelope": 	"JSON-RPC 2.0",
    "serviceUrl": 	"/localhost:6087",
    
    "methods": {
	/*
	 * @descr 
	 *     this methos is usually invoked by HMI to get list of registered apps 
	 *	
	 * 	
	 * @returns
	 *  	the array of rehgistered apps
 	 * 	
	 */ 
        "AppLinkCore.getAppList": {
	    	returns: // return value is provided in corresponding response object, id of request and response should be equal
			"parameters": {
				[
					"appName"		: "string",
					"ngnMediaScreenAppName" : "string",
					"icon"			: "string",
				]
			}
        },


	/*
	 * @descr 
	 *      Activate app 
	 * 	Usually invoked by UI component when user click on app in the list of registered apps
	 * 	
	 * @returns
	 *  	result
 	 * 	
	 */ 
        "AppLinkCore.activateApp": {
		"parameters": {
			[
				"appName"		: "string"
				// TODO: same apps registered, name not unique in the future
			]
		}

	    	returns: // return value is provided in corresponding response object, id of request and response should be equal
			{
				"result" : "???" // TODO: data type to be defined
			}
        },

	/*
	 * @descr Notifies if new application is registered
	 */
	"AppLinkCore.OnAppRegistered": {
		"parameters": {
			"appName"	: "string",        
			"appIcon"	: "string",
			[
				"vrSynonym" : "String" // sysnonyms assossiated with app to start it
			],
			"isMediaApplication" : "boolean",
			"languageDesired"    : "Language" // data type from AppLink protocol specification
		}
	},

	/*
	 * @descr Notifies if application is unregistered
	 */
	"AppLinkCore.OnAppUnregistered": {
		"parameters": {
			"appName"	: "string",
			"reason"        : "AppInterfaceUnregisteredReason" // data type from AppLink protocol specification
		}
	},


    }, //methods end
    
    "id": "integer" //REQUIRED for request methods. NOT to be used for notifications
}
