{
    "envelope": 	"JSON-RPC 2.0",
    "serviceUrl": 	"/localhost:6087",
    
    "methods": {
	/*
	 * @descr 
	 *      
	 *	
	 * 	
	 * @returns
	 * 	
 	 * 	
	 */ 
        "AppLinkCore.??": {
	    	returns: // return value is provided in corresponding response object, id of request and response should be equal
			[
				"capabilities"	: "ButtonCapabilities", // data type from AppLink protocol specification
	    			"button"	: "string"
			]
        },


	/*
	 * @descr Notifies application of LONG/SHORT press events for buttons
	 */
	"AppLinkCore.OnAppRegister": {
	 // TODO
		"parameters": {
			"name"	: "string",        
			"mode"	: "ButtonPressMode" // data type from AppLink protocol specification
		}
	}

    }, //methods end
    
    "id": "integer" //REQUIRED for request methods. NOT to be used for notifications
}
