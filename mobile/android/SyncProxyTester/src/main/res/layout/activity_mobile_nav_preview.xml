<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MobileNavPreviewActivity">


    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMobileNaviCheckBoxAction"
            android:id="@+id/mobileNavCheckBox"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:checked="false"
            android:hint="@string/mobile_navi_hint"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/video_streaming_hint"
            android:id="@+id/videoStreamingCheckBox"
            android:checked="false"
            android:onClick="onVideoStreamingCheckBoxAction"
            android:layout_below="@+id/mobileNavCheckBox"
            android:layout_alignParentLeft="true"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/videoStreamingCheckBox">


    </RelativeLayout>


</RelativeLayout>
