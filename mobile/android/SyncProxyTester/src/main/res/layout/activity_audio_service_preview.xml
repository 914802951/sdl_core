<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Audio Service"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/audioServiceCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:hint="@string/turn_on_label"
        android:textColor="@color/app_regular_text_color" />

    <CheckBox
        android:id="@+id/audio_service_loop_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="@string/loop_file_label"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/audioServiceCheckBox"
        android:textColor="@color/app_regular_text_color"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/audio_service_secure_checkbox_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/audioServiceCheckBox"
        android:text="@string/start_secure_service"
        android:textColor="@color/app_regular_text_color" />

    <Button
        android:id="@+id/audio_service_not_service_secure_button_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/audio_service_secure_checkbox_view"
        android:text="@string/start_not_secure_service"
        android:textColor="@color/app_regular_text_color" />

    <TextView
        android:id="@+id/audio_service_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio_service_not_service_secure_button_view"
        android:text="Service State:" />

    <Button
        android:id="@+id/audio_file_streaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/audio_service_status_text_view"
        android:text="Start File Streaming"
        android:textColor="@color/app_regular_text_color" />

    <Button
        android:id="@+id/audio_file_streaming_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/audio_service_status_text_view"
        android:layout_toRightOf="@id/audio_file_streaming"
        android:text="Stop File Streaming"
        android:textColor="@color/app_regular_text_color" />

</RelativeLayout>